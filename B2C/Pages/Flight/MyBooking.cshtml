                                </div>
                                <div>
                                    <div class="flight_search_destination_sidebar" style="width: 150px!important">
                                        <p>To</p>
                                        @{
                                            foreach (var a in Model.Airports)
                                            {
                                                if (a.Code == Model.Abooking.Arrival)
                                                {
                                                    <h3 style="padding-top: 10px">
                                                        @a.Location
